= form_for @rab do |f|
  - if @rab.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rab.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @rab.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :login
    = f.text_field :login
  .actions
    = f.submit 'Save'
