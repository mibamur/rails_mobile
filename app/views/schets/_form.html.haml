= form_for @schet, "data-ajax" => false do |f|
  - if @schet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schet.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @schet.errors.full_messages.each do |msg|
          %li= msg
  %div{ :class=>"name"}
    .field
      = f.label t(:name)
      = f.text_field :name

  %div{ :class=>"login"}
    .field
      = f.label t(:login)
      = collection_select(:schet, :login_id, Login.all, :id, :name, prompt: true)

  %div{ :class=>"panel"}
    .field
      = f.check_box :panel
      = f.label :panel

  %div{ :class=>"balance"}
    .field
      = f.check_box :balance
      = f.label :balance

  %div{ :class=>"cash"}
    .field
      = f.text_field :cash
      = f.label t(:cash)

      - 'TABB'
  %div
    .field
      = f.submit t('.save', :default => t("helpers.links.save")), :class => "btn btn-primary", "data-ajax" => false

