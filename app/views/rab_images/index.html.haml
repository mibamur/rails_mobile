%h1
  = t(:rab_images)
  = link_to new_rab_image_path, "data-ajax" => "false" do
    .ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.ui-icon-plus.ui-btn-icon-notext.ui-btn-b{"data-theme" => "b", "data-ajax"=>"false", :style=>"float:right;"}
      = t(:new)

.docs-main
  %table#tabl_rab_image.tablesaw{"data-minimap" => "", "data-mode" => "swipe", "data-mode-switch" => "", "data-sortable" => "", "data-sortable-switch" => ""}
    %thead
      %tr


        %th{"data-priority" => "1", "data-sortable-col" => ""}= t(:image)

        %th{"data-priority" => "2", "data-sortable-col" => ""}= t(:rab)
        %th{"data-priority" => "", "data-sortable-col" => ""}
    %tbody
      - @rab_images.each do |rab_image|
        %tr


          %td
            - if rab_image.image_url
              = image_tag rab_image.image_url(:thumb).to_s, :class => "thumbnail img-responsive"
          

          %td
            - if rab_image.rab_id
              = rab_image.rab.name
          
          %td
            = link_to 'Изменить', edit_rab_image_path(rab_image), :class => "ui-btn ui-btn-icon-left ui-icon-edit", "data-ajax" => false
            = link_to 'Удалить', rab_image, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "ui-btn ui-btn-icon-left ui-icon-delete", "data-ajax" => false




