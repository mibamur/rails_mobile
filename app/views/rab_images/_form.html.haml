= form_for @rab_image, "data-ajax" => false do |f|
  - if @rab_image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rab_image.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @rab_image.errors.full_messages.each do |msg|
          %li= msg
  %div{ :class=>"image"}
    .field
      = f.label t(:image)
      - if @rab_image.image_url
        = image_tag @rab_image.image_url(:big_thumb).to_s, :class => "thumbnail img-responsive"
      = f.file_field :image, title: "Выбрать"

  %div{ :class=>"rab"}
    .field
      = f.label t(:rab)
      = collection_select(:rab_image, :rab_id, Rab.all, :id, :name, prompt: true)

      - 'TABB'
  %div
    .field
      = f.submit t('.save', :default => t("helpers.links.save")), :class => "btn btn-primary", "data-ajax" => false

