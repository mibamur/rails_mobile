= form_for @smena, "data-ajax" => false do |f|
  - if @smena.errors.any?
    #error_explanation
      %h2= "#{pluralize(@smena.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @smena.errors.full_messages.each do |msg|
          %li= msg
  %div{ :class=>"todate"}
    .field
      = f.label t(:todate)
      = f.date_select :todate

  %div{ :class=>"schet"}
    .field
      = f.label t(:schet)
      = collection_select(:smena, :schet_id, Schet.all, :id, :name, prompt: true)

      - 'TABB'
  %div
    .field
      = f.submit t('.save', :default => t("helpers.links.save")), :class => "btn btn-primary", "data-ajax" => false

