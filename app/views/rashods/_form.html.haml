= form_for @rashod, "data-ajax" => false do |f|
  - if @rashod.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rashod.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @rashod.errors.full_messages.each do |msg|
          %li= msg
  %div{ :class=>"schet"}
    .field
      = f.label t(:schet)
      = collection_select(:rashod, :schet_id, Schet.all, :id, :name, prompt: true)

  %div{ :class=>"cat_rashod"}
    .field
      = f.label t(:cat_rashod)
      = collection_select(:rashod, :cat_rashod_id, CatRashod.all, :id, :name, prompt: true)

  %div{ :class=>"comment"}
    .field
      = f.label t(:comment)
      = f.text_area :comment

  %div{ :class=>"rab"}
    .field
      = f.label t(:rab)
      = collection_select(:rashod, :rab_id, Rab.all, :id, :name, prompt: true)

  %div{ :class=>"todate"}
    .field
      = f.label t(:todate)
      = f.date_select :todate

  %div{ :class=>"cash"}
    .field
      = f.label t(:cash)
      = f.text_field :cash

      - 'TABB'
  %div
    .field
      = f.submit t('.save', :default => t("helpers.links.save")), :class => "btn btn-primary", "data-ajax" => false

